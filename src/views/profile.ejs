<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>

    <section class="text-gray-400 bg-gray-900 body-font">
      <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
        <div
          class="lg:w-2/6 md:w-1/2 bg-gray-800 bg-opacity-50 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0"
        >
          <form class="Profile Form">
            <h2 class="text-white text-lg font-medium title-font mb-5">
              USER PROFILE
            </h2>

            <div class="relative mb-4">
              <label for="firstname" class="leading-7 text-sm text-gray-400"
                >First Name</label
              >
              <input
                autocomplete="on"
                disabled
                type="text"
                id="firstname"
                name="firstname"
                value="<%= user?.firstname %>"
                required
                class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              />
            </div>
            <div class="relative mb-4">
              <label for="lastname" class="leading-7 text-sm text-gray-400"
                >Last Name</label
              >
              <input
                autocomplete="on"
                disabled
                type="text"
                id="lastname"
                name="lastname"
                value="<%= user?.lastname %>"
                required
                class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              />
            </div>
            <div class="relative mb-4">
              <label for="nickname" class="leading-7 text-sm text-gray-400"
                >Nckname</label
              >
              <input
                autocomplete="on"
                disabled
                type="text"
                id="nickname"
                name="nickname"
                value="<%= user?.nickname %>"
                required
                class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              />
            </div>
            <div class="relative mb-4">
              <label for="profession" class="leading-7 text-sm text-gray-400"
                >Profession</label
              >
              <input
                autocomplete="on"
                disabled
                type="text"
                id="profession"
                name="profession"
                value="<%= user?.profession %>"
                required
                class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              />
            </div>
            <div class="relative mb-4">
              <label for="profession" class="leading-7 text-sm text-gray-400"
                >Email</label
              >
              <input
                autocomplete="on"
                disabled
                type="email"
                id="email"
                name="email"
                value="<%= user?.email %>"
                required
                class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-green-900 rounded border border-gray-600 focus:border-green-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
              />
            </div>

            <button
              disabled
              class="text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-lg"
            >
              Submit
            </button>
            <p class="text-xs mt-3 gubi-error"></p>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
