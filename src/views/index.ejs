<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <section class="hero">
      <div class="content">
        <h3>Featured Blogs</h3>
        <h1>Writings From GUBI</h1>
        <h6>The Latest Industry News, Technologies and Resources</h6>
      </div>
      <!-- <div class="featured"></div> -->
    </section>
    <main class="home">
      <section class="blogs">
        <% for (let blog of blogs.filter(blog => blog.featured)) { %>

        <div class="details">
          <a href="/api/v1/blog/post/<%=blog?._id %>">
            <img src="/images/bg5.jpg" alt="IMAGE" />
          </a>
          <div>
            <h2><%= blog.title.substring(0, 70) + '...' %></h2>
          </div>
          <div>
            <p><%= blog.snippet.substring(0, 70) + '...' %></p>
          </div>
          <div class="blog-user">
            <a href="/api/v1/user/profile/<%=blog?.postedBy?._id %>">
              <img src="/images/bg.jpg" alt="" />
              <%= blog?.postedBy?.firstname %>
            </a>
            <span><%= blog?.postedBy?.profession %></span>
          </div>

          <div class="read-btn">
            <a href="/api/v1/blog/post/<%=blog?._id %>">
              <button>Read More</button>
            </a>
          </div>
          <div class="category">
            <span><%= blog?.category %></span>
          </div>
        </div>
        <% } %>
      </section>
    </main>

    <%- include('./partials/footer'); -%>
  </body>
</html>
