<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <section class="hero">
      <div class="content">
        <h1>THE GUBI BLOG</h1>
        <h6>Cutting-Edge Insights</h6>
      </div>
    </section>
    <main class="home"></main>

    <div class="stack">
      <% for (let blog of blogs.filter(blog => blog.featured)) { %>
      <div class="card">
        <div class="card-content">
          <article class="content">
            <h2><%= blog.title.substring(0, 70) + '...' %></h2>
            <p><%= blog.snippet.substring(0, 70) + '...' %></p>

            <a href="/api/v1/blog/post/<%=blog?._id %>">
              <button class="action primary">
                <span>READ MORE</span><i class="fa fa-arrow-right"></i>
              </button>
            </a>
          </article>
        </div>
      </div>
      <% } %> <%- include('./partials/footer'); -%>
    </div>
  </body>
</html>
