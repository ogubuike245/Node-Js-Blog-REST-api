<section
  class="text-gray-400 bg-gray-800 body-font border-opacity-75 m-2 rounded-lg"
  style="
    background-image: url('/images/bg5.jpg');
    background-repeat: no-repeat;
    background-size: cover;
  "
>
  <div
    class="flex justify-center items-center sm:text-3xl text-2xl title-font font-medium text-gray-100 mt-4"
  >
    <h1
      class="text-gray-800 bg-blue-300 py-1 px-4 rounded-md font-bold text-4xl tracking-wide"
    >
      FEATURED
    </h1>
  </div>

  <div class="container px-5 py-10 mx-auto">
    <div class="flex flex-wrap -m-1">
      <% for (let blog of blogs.filter(blog => blog.featured)) { %>

      <div class="xl:w-1/3 md:w-1/2 p-4">
        <div class="border border-gray-900 p-6 rounded-lg bg-gray-900">
          <div
            class="w-auto h-10 inline-flex items-center justify-center rounded-full bg-gray-800 text-indigo-500 mb-4"
          >
            <span
              class="inline-block py-1 px-1 rounded bg-gray-800 text-gray-200 text-opacity-75 text-xs font-medium tracking-widest"
              ><%= blog?.category %></span
            >
          </div>
          <a href="/api/v1/blog/post/<%=blog?._id %>">
            <img class="rounded-t-lg" src="/images/hero.jpg" alt="IMAGE" />
          </a>
          <h2 class="text-lg text-gray-100 font-medium title-font mb-2">
            <%= blog.title.substring(0, 70) + '...' %>
          </h2>
          <p class="leading-relaxed text-base text-gray-600 font-mono">
            <%= blog.snippet.substring(0, 70) + '...' %>
          </p>
          <a
            class="inline-flex items-center mt-6"
            href="/api/v1/user/profile/<%=blog?.postedBy?._id %>"
          >
            <img
              alt="blog"
              src="/images/hero.jpg"
              class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center"
            />
            <span class="flex-grow flex flex-col pl-4">
              <span class="title-font font-medium text-gray-100"
                ><%= blog?.postedBy?.firstname %></span
              >
              <span
                class="text-gray-500 text-xs tracking-widest mt-0.5 font-mono"
                ><%= blog?.postedBy?.profession %></span
              >
            </span>
          </a>
          <a
            class="flex justify-center items-center mt-6 rounded-lg"
            href="/api/v1/blog/post/<%=blog?._id %>"
          >
            <button
              class="flex mx-auto mt-8 text-gray-100 bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded-full text-lg"
            >
              Read More
            </button>
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
