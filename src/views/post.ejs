<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>

    <section class="text-gray-400 body-font bg-gray-900">
      <div class="container px-5 py-24 mx-auto">
        <div class="w-full px-5 py-24 mx-auto lg:px-32">
          <div
            class="flex flex-col w-full mx-auto mb-2 prose text-left prose-md"
          >
            <div class="mb-5 border-b border-gray-200">
              <div class="flex flex-wrap items-baseline -mt-2">
                <h5 class="text-lg font-medium text-gray-100">
                  <%= post.date %>
                </h5>
                <p
                  class="inline-block py-1 px-1 rounded bg-gray-800 text-gray-200 text-opacity-75 text-xs font-medium tracking-widest"
                >
                  <%= post.category %>
                </p>
              </div>
            </div>

            <h1 class="text-4xl font-bold text-white mb-4">
              <%= post.snippet %>
            </h1>
            <p class="text-lg leading-8 text-gray-300 bg-black p-3 font-mono">
              <%= post.content %>
            </p>
            <div class="flex justify-around">
              <a href="/api/v1/blog/edit/post/<%= post._id %>">
                <img src="/images/icons/edit.png" alt="EDIT " srcset="" />
                EDIT POST</a
              >
              <a href="/api/v1/blog/edit/post/<%= post._id %>">
                <img src="/images/icons/delete.png" alt="EDIT " srcset="" />
                DELETE POST</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
